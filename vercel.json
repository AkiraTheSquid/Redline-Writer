{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "cleanUrls": true,
  "rewrites": [
    { "source": "/health",                "destination": "/api/health" },
    { "source": "/sessions",              "destination": "/api/sessions/index" },
    { "source": "/sessions/:id/end",      "destination": "/api/sessions/by-id?path=:id&action=end" },
    { "source": "/sessions/:id",          "destination": "/api/sessions/by-id?path=:id" },
    { "source": "/api/sessions/:id/end",  "destination": "/api/sessions/by-id?path=:id&action=end" },
    { "source": "/api/sessions/:id",      "destination": "/api/sessions/by-id?path=:id" },
    { "source": "/(.*)",                  "destination": "/index.html" }
  ]
}
